<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <ImageView
        android:id="@+id/phone_register_logo"
        android:src="@drawable/phone_large"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#fff"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/phone_register_text1"
        android:layout_below="@+id/phone_register_logo"
        android:text="Register your mobile number to use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:background="@drawable/rounded_corner_ll"
        android:orientation="horizontal"
        android:layout_below="@+id/phone_register_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_registerr_ll1">
            <ImageView
                android:background="@drawable/phone_outline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginLeft="6dp"
                android:hint="@string/phone_number"
                android:id="@+id/et_phone_register_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="phone" />
    </LinearLayout>

    <Button
        android:background="@drawable/login_button"
        android:layout_marginTop="16dp"
        android:id="@+id/phone_register_submit_number"
        android:textColor="#fff"
        android:text="@string/phone_submit"
        android:layout_below="@+id/phone_registerr_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#fff"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/phone_register_privacyPolicy"
        android:text="Privacy Policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
