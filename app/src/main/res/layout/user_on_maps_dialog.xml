<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/chat_rounded_rect_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/user_on_maps_dialog_ll1"
        android:padding="6dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_on_maps_dialog_profile_pic"
            android:src="@drawable/gth"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:padding="6dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Gaurav Bordoloi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:orientation="horizontal"
        android:id="@+id/user_on_maps_dialog_address"
        android:layout_below="@+id/user_on_maps_dialog_ll1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/google_maps"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:padding="6dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Mahatma Gandhi Avenue, 713209, NIT Durgapur, West Bengal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:padding="6dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/user_on_maps_dialog_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/chat_icon"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="CHAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/chat_icon"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="GO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>